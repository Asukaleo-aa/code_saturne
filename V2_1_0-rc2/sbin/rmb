#!/bin/sh

PREFIX=`dirname $0`
PREFIX="$PREFIX/.."

RMBDIR=/tmp/tmp_rmb

mkdir -p $RMBDIR || exit 1

cd $PREFIX

for file in src/*/*.[ch] src/*/*.f90 users/*/*.f90 \
            gui/*/*.py bin/*.py bin/*.in bin/runcase* \
            libple/*/*.[ch] libsyrcs/*.[ch] preprocessor/*/*.[ch] \
            salome/cfd_proxy/*.[ch] salome/libmilieu/*.[ch] \
            salome/fsi_coupling/src/*/*.[ch]xx \
            salome/fsi_coupling/src/*/*.py.in \
            salome/fsi_coupling/src/*/*.py \
            salome/cfd_study/src/*/*.py
do
  tmpfile=`basename $file`
  sed -e 's/ *$//' -e 's/	/        /g' $file > $RMBDIR/$tmpfile
  diff $file $RMBDIR/$tmpfile > /dev/null 2>&1
  if [ $? = 1 ]
  then
    echo $file
    mv $RMBDIR/$tmpfile $file
  fi
done

\rm -rf $RMBDIR

